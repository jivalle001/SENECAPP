<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".presentador.LoginMenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginMenuButtonText"
        android:id="@+id/LogInButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="163dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toLoginPage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerMenuButtonText"
        android:id="@+id/SingInButton"
        android:layout_below="@+id/LogInButton"
        android:layout_alignRight="@+id/LogInButton"
        android:layout_alignEnd="@+id/LogInButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toRegisterPage"/>
</RelativeLayout>
