<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tta.intel.eus.senecapp.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividades"
        android:id="@+id/actividadesButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="actividades"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expresiones"
        android:id="@+id/expresionesButton"
        android:layout_below="@+id/actividadesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="expresiones"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapas"
        android:id="@+id/mapasButton"
        android:layout_below="@+id/expresionesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="mapas"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:id="@+id/ajustesButton"
        android:layout_below="@+id/mapasButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ajustes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avatar"
        android:layout_below="@+id/ajustesButton"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:id="@+id/cerrarSesionButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ajustesButton"
        android:layout_alignEnd="@+id/ajustesButton"
        android:layout_toEndOf="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="cerrarSesion"/>
</RelativeLayout>
